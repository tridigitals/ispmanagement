{
  "name": "tauri-app",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets",
    "lint:rust:sqlite": "cargo clippy --manifest-path src-tauri/Cargo.toml --no-default-features --features sqlite --all-targets",
    "lint:rust:strict": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets -- -D warnings",
    "lint:rust:strict:sqlite": "cargo clippy --manifest-path src-tauri/Cargo.toml --no-default-features --features sqlite --all-targets -- -D warnings",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "format:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml --all",
    "tauri": "tauri"
  },
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-opener": "^2",
    "@zerodevx/svelte-toast": "^0.9.6",
    "lucide-svelte": "^0.562.0",
    "svelte-i18n": "^4.0.1",
    "svelte-sonner": "^1.0.7"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@eslint/js": "^9.12.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte-eslint-parser": "^0.39.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
