<script lang="ts">
    import { onMount } from "svelte";
    import { page } from "$app/stores";
    import { publicApi } from "$lib/api/client";
    import { login } from "$lib/stores/auth";
    import { goto } from "$app/navigation";
    import { fade } from "svelte/transition";
    import Icon from "$lib/components/ui/Icon.svelte";

    let slug = "";
    let tenant: any = null;
    let pageLoading = true;
    let pageError = "";

    // Login Form State
    let email = "";
    let password = "";
    let rememberMe = true;
    let loginLoading = false;
    let loginError = "";
    let showPassword = false;

    onMount(async () => {
        console.log("DEBUG: Slug page mounted");
        slug = $page.params.slug;
        console.log("DEBUG: Slug from params:", slug);
        if (!slug) {
            pageError = "No slug found";
            pageLoading = false;
            return;
        }
        await loadTenant();
    });

    async function loadTenant() {
        pageLoading = true;
        try {
            tenant = await publicApi.getTenant(slug);
        } catch (e: any) {
            pageError = "Tenant not found or inactive.";
            console.error(e);
        } finally {
            pageLoading = false;
        }
    }

    async function handleLogin(e: Event) {
        e.preventDefault();
        loginError = "";
        loginLoading = true;

        try {
            await login(email, password, rememberMe);
            // Successful login -> Redirect to dashboard

            // If we are on the custom domain for this tenant, don't prepend slug
            if ($page.url.hostname.includes(tenant.slug)) {
                goto(`/dashboard`);
            } else {
                goto(`/${tenant.slug}/dashboard`);
            }
        } catch (err: any) {
            loginError = err.message || "Login failed";
        } finally {
            loginLoading = false;
        }
    }
</script>

<div class="landing">
    {#if pageLoading}
        <div class="loading-state" in:fade>
            <div class="spinner"></div>
        </div>
    {:else if pageError}
        <div class="error-state" in:fade>
            <h1>404</h1>
            <p>{pageError}</p>
            <a href="/" class="btn btn-secondary">Go Home</a>
        </div>
    {:else}
        <div class="split-layout">
            <!-- Left Side: Visual/Branding -->
            <div class="visual-section">
                <div class="visual-content">
                    <div class="visual-text">
                        <h2>Powered by SaaS Boilerplate</h2>
                        <p>Secure, scalable, and enterprise-ready.</p>
                    </div>
                    <div class="glow-orb orb-1"></div>
                    <div class="glow-orb orb-2"></div>
                </div>
            </div>

            <!-- Right Side: Login Form -->
            <div class="login-section">
                <div class="login-container">
                    <div class="tenant-brand">
                        {#if tenant.logo_url}
                            <img
                                src={tenant.logo_url}
                                alt={tenant.name}
                                class="tenant-logo-img"
                            />
                        {:else}
                            <div class="tenant-logo-placeholder">
                                {tenant.name.substring(0, 2).toUpperCase()}
                            </div>
                        {/if}
                        <h1>{tenant.name}</h1>
                        <p>Sign in to your account</p>
                    </div>

                    {#if loginError}
                        <div class="alert error">
                            {loginError}
                        </div>
                    {/if}

                    <form on:submit={handleLogin} class="login-form">
                        <div class="input-group">
                            <label for="email">Email Address</label>
                            <div class="field">
                                <span class="icon"
                                    ><Icon name="mail" size={18} /></span
                                >
                                <input
                                    type="email"
                                    id="email"
                                    bind:value={email}
                                    placeholder="name@company.com"
                                    required
                                />
                            </div>
                        </div>

                        <div class="input-group">
                            <label for="password">Password</label>
                            <div class="field">
                                <span class="icon"
                                    ><Icon name="lock" size={18} /></span
                                >
                                <input
                                    type={showPassword ? "text" : "password"}
                                    id="password"
                                    bind:value={password}
                                    placeholder="Enter your password"
                                    required
                                />
                                <button
                                    type="button"
                                    class="toggle-password"
                                    on:click={() =>
                                        (showPassword = !showPassword)}
                                    tabindex="-1"
                                >
                                    <Icon
                                        name={showPassword ? "eye-off" : "eye"}
                                        size={18}
                                    />
                                </button>
                            </div>
                        </div>

                        <div class="form-utils">
                            <label class="checkbox">
                                <input
                                    type="checkbox"
                                    bind:checked={rememberMe}
                                />
                                <span class="checkmark"></span>
                                <span>Remember me</span>
                            </label>
                            <a href="/forgot-password" class="forgot-link"
                                >Forgot password?</a
                            >
                        </div>

                        <button
                            type="submit"
                            class="btn-primary"
                            disabled={loginLoading}
                        >
                            {#if loginLoading}
                                <div class="spinner-small"></div>
                            {:else}
                                Sign In
                            {/if}
                        </button>
                    </form>

                    <div class="footer-links">
                        <a href="/">‚Üê Back to Platform</a>
                    </div>
                </div>
            </div>
        </div>
    {/if}
