{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tri Digital Solution",
  "version": "0.1.0",
  "identifier": "com.saas.boilerplate",
  "build": {
    "beforeDevCommand": "node scripts/sync-config.js && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "node scripts/sync-config.js && npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Tri Digital Solution",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' blob: data: asset: https:; connect-src 'self' ipc: http://ipc.localhost http://localhost:3000 ws://localhost:3000 https: wss://apisaas.tridigitals.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}